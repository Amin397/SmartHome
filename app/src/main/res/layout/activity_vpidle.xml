<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blank_background"
    android:weightSum="100"
    tools:context="com.mimik.smarthome.userinterface.visitorPanel.VPIdle">

    <ProgressBar
        android:id="@+id/callProgress"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/buttonScan"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="@string/scan_for_devices" />
        <LinearLayout
            android:layout_width="1267dp"
            android:visibility="gone"
            android:layout_height="265dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nfcText"
                android:layout_width="566dp"
                android:layout_height="94dp" />

            <LinearLayout
                android:id="@+id/LLT"
                android:visibility="gone"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/TBNum"
                    android:layout_width="278dp"
                    android:layout_height="67dp"
                    android:ems="5"
                    android:inputType="numberSigned|number|numberDecimal"
                    android:text=""
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="29dp" />

                <EditText
                    android:id="@+id/TPass"
                    android:layout_width="300dp"
                    android:layout_height="98dp"
                    android:ems="5"
                    android:inputType="numberPassword"
                    android:text=""
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="138dp"
                android:layout_height="245dp"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/bcall"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@android:color/transparent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="114dp"
                    android:layout_height="7dp" />

                <ImageButton
                    android:id="@+id/bunlock"
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    app:srcCompat="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="93dp" />

                <ImageButton
                    android:id="@+id/bsetting"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    app:srcCompat="@android:color/transparent"
                    tools:visibility="visible" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="387dp"
                android:layout_height="14dp"
                android:visibility="gone"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="8dp"
                android:indeterminate="true" />

            <ImageButton
                android:id="@+id/buttonIgnore"
                android:layout_width="225dp"
                android:layout_height="48sp"
                android:layout_gravity="bottom"
                android:layout_margin="16sp"
                android:layout_marginEnd="200dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="20"
                android:adjustViewBounds="true"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/ignore"
                android:cropToPadding="false"
                android:focusable="true"
                android:src="@drawable/ic_call_end_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:clickable="true" />

            <ImageButton
                android:id="@+id/buttonAnswer"
                android:layout_width="227dp"
                android:layout_height="49dp"
                android:layout_gravity="bottom"
                android:layout_margin="16sp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="20"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/answer"
                android:focusable="true"
                android:src="@drawable/ic_phone_in_talk_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonIgnore"
                app:layout_constraintStart_toStartOf="parent"
                tools:clickable="true" />

        </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/mimik_logo_larg"
        android:id="@+id/image_logo_visitor_id"
        android:layout_height="wrap_content"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="focuse.json"
        android:id="@+id/anim_focuse_id"
        app:lottie_speed="1"
        android:layout_alignTop="@id/image_logo_visitor_id"
        android:layout_alignBottom="@id/image_logo_visitor_id"
        android:layout_centerInParent="true"
        android:layout_alignStart="@id/image_logo_visitor_id"
        android:layout_alignEnd="@id/image_logo_visitor_id"
        android:layout_height="0dp"/>

    <include
        android:id="@+id/include_visitor_id"
        android:visibility="gone"
        android:layout_width="match_parent"
        layout="@layout/visitor_simple"
        android:layout_height="match_parent"/>
    
</RelativeLayout>
